<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="选择水准线路"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="请选择项目"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"/>
<!--        <Spinner-->
<!--            android:id="@+id/project_spin"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"/>-->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"-->
<!--            android:drawableRight="@mipmap/arrow"-->
<!--            android:drawableEnd="@mipmap/arrow"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:textColor="#333333"-->
<!--            android:textSize="16dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:text="tettttt"-->
<!--            android:gravity="center_vertical"/>-->
        <Button
            android:id="@+id/project_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d8d8d8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow"
            android:textColor="#333333"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:elevation="10dp"
            tools:text="2222222222"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="请选择标段"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"/>
<!--        <Spinner-->
<!--            android:id="@+id/section_spin"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"/>-->
        <Button
            android:id="@+id/section_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d8d8d8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow"
            android:textColor="#333333"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:elevation="10dp"
            tools:text="2222222222"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_workpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="请选择工点"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"/>
<!--        <Spinner-->
<!--            android:id="@+id/workpoint_spin"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"/>-->
        <Button
            android:id="@+id/workpoint_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d8d8d8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow"
            android:textColor="#333333"
            android:elevation="10dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            tools:text="2222222222"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_levelingline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:text="请选择水准线路"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"/>
<!--        <Spinner-->
<!--            android:id="@+id/levelingline_spin"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"/>-->
        <Button
            android:id="@+id/leveling_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#d8d8d8"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/arrow"
            android:textColor="#333333"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:elevation="10dp"
            tools:text="2222222222"/>
    </LinearLayout>

    <TextView
        android:id="@+id/levelingline_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="14dp"
        android:textColor="#333333"
        android:gravity="center"
        android:text="水准线路编号："
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_measure"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_enable_corner_rect"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:text="开始测量"
        android:elevation="10dp"/>
</LinearLayout>