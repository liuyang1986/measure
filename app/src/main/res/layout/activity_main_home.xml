<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_color"
        android:textColor="@color/white"
        android:text="沉降观测主界面"
        android:textSize="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_menu1"
        android:layout_below="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_xm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="项目列表"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_cursor_color"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_bd"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="标段列表"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_cursor_color"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_gd"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="工点列表"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_cursor_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu2"
        android:layout_below="@+id/ll_menu1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:orientation="horizontal">

<!--        <TextView-->
